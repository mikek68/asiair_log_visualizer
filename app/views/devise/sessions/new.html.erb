<div class="position-absolute top-50 start-50 translate-middle border border-light-subtle rounded p-5">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "mb-3" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "mb-3" } %>
    <%= f.input :remember_me, as: :boolean, input_html: { class: "m-1" } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "border border-white mt-3 mb-3"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>